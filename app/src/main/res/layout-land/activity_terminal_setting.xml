<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b2bec3"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".TerminalSettingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#2d3436"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <console.infotech.myapplication.customView.MyButtonView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:drawableRight="@drawable/ic_house"
                android:text="Back" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:gravity="center_vertical"
            android:padding="12dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:weightSum="3">

            <LinearLayout
                android:paddingTop="6dp"
                android:weightSum="5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnOne"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btnnumbersshape"
                    android:text="1" />

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnTwo"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnnumbersshape"
                    android:text="2" />

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnThree"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnnumbersshape"
                    android:text="3" />

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnConfirm"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:onClick="confirmInput"
                    android:layout_weight="2"
                    android:background="@drawable/btnconfirm"
                    android:text="Confirm" />
            </LinearLayout>
            <LinearLayout
                android:paddingTop="6dp"
                android:weightSum="5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnFour"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btnnumbersshape"
                    android:text="4" />

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnFive"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnnumbersshape"
                    android:text="5" />

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnSix"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnnumbersshape"
                    android:text="6" />

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnDelete"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="2"
                    android:background="@drawable/btndelete"
                    android:text="Delete" />

            </LinearLayout>
            <LinearLayout
                android:weightSum="5"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp">

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnSeven"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/btnnumbersshape"
                    android:clickable="true"
                    android:text="7" />

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnEight"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnnumbersshape"
                    android:text="8" />

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnNine"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnnumbersshape"
                    android:text="9" />

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnZero"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnnumbersshape"
                    android:text="0" />

                <console.infotech.myapplication.customView.MyButtonView
                    android:id="@+id/btnDot"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="1"
                    android:background="@drawable/btnnumbersshape"
                    android:text="." />


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:padding="12dp"
            android:layout_weight="1"
            android:weightSum="4"
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <org.angmarch.views.NiceSpinner
                android:id="@+id/nice_spinner"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_margin="16dp"/>

            <console.infotech.myapplication.customView.MyEditTextView
                android:layout_width="match_parent"
                android:id="@+id/etEntryPass"
                android:layout_weight="1"
                android:background="#fff"
                android:layout_height="0dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#2d3436">

    </LinearLayout>



</LinearLayout>